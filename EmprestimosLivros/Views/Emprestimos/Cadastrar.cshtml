@model EmprestimosModel
@{
    ViewData["title"] = "cadastrar";
}

<div class="container">
    <div>
        <h1>Cadastro de Empréstimo</h1>
    </div>
    
    @*Para Adicionar, o código pega os dados no banco e salva no banco; coloca METHOD de POST no form,
    entao adiciona o controller e o metodo que quer usar; ex <form asp-controller="Emprestimos" asp-action="Cadastrar">
    *@

    <form asp-controller="Emprestimos" asp-action="Cadastrar"> 
        <div class="mb-3">
            <label for="Recebedor" class="form-label">Recebedor:</label>
            <input type="text" class="form-control" asp-for="Recebedor" id="recebedor" placeholder="Quem está recebendo o livro?">
            <span asp-validation-for="Recebedor" class="text-danger"></span>
        </div>


        <div class="mb-3">
            <label for="Fornecedor" class="form-label">Fornecedor</label>
            <input type="text" class="form-control" asp-for="Fornecedor" id="Fornecedor" placeholder="Quem está emprestando o livro?">
            <span asp-validation-for="Fornecedor" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="livro" class="form-label">Livro</label>
            <input type="text" class="form-control" asp-for="LivroEmprestado" id="Livro" placeholder="Qual é o livro que está sendo emprestado?">
            <span asp-validation-for="LivroEmprestado" class="text-danger"></span>
        </div>


        
        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-primary">Adicionar</button>
            <a class="btn btn-primary " asp-controller="Emprestimos" asp-action="Index"> Voltar </a>
        </div>
    </form>
</div>

