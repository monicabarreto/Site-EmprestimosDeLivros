@model IEnumerable<EmprestimosModel> //Aqui faz a rferencia da model do projeto. E colocar  dentro da estrutura Ienumerable

<div class="container">
    <div class=" d-flex justify-content-between align-items-center mb-5">
        <h1>Emprestimos</h1>
        <a class="btn btn-success" asp-controller="Emprestimos" asp-action="Cadastrar"><i class="bi bi-file-earmark-plus"> Cadastrar Novo empréstimo </i></a>
    </div>
</div>

<table  class="table table-bordered border-primary table-hover">
    <thead>
        <tr>          
            <th scope="col" class="text-center"><strong>Recebedor</strong></th>
            <th scope="col" class="text-center"><strong>Fornecedor</strong></th>
            <th scope="col" class="text-center"><strong>Livro</strong></th>
            <th scope="col" class="text-center"><strong>Data</strong></th>
            <th class="text-center"><strong>Ações</strong></th>
           
        </tr>
    </thead>
    <tbody>
        @if(Model != null)
        {
            @foreach (var emprestimo in Model)
            {
                <tr>

                    <td class="text-center">@emprestimo.Recebedor</td>
                    <td class="text-center">@emprestimo.Fornecedor</td>
                    <td class="text-center">@emprestimo.LivroEmprestado</td>
                    <td class="text-center">@emprestimo.DataEmprestimo</td>
                    <td class="text-center">
                        <a class="btn btn-warning mx-2" asp-controller="Emprestimos" asp-action="Editar" asp-route-id="@emprestimo.Id"><i class="bi bi-pencil-fill"> Editar</i></a>
                        <a class="btn btn-danger mx-2" asp-controller="Emprestimos" asp-action="Excluir" asp-route-id="@emprestimo.Id"> <i class="bi bi-trash-fill"> Excluir</i> </a>
                    </td>
                    
                </tr>
            }
          
            
        }
        
      
    </tbody>
</table>